<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_company_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/test"/>


            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toEndOf="@+id/iv_company_logo"
                android:text="果小美"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_3"
                android:text="10K-20K"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/sp_16"/>


            <TextView
                android:id="@+id/tv_position_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_salary"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toEndOf="@+id/iv_company_logo"
                android:text="Android开发工程师"
                android:textColor="#111"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_position_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_position_info"
                android:layout_marginTop="@dimen/dp_5"
                android:text="12月11日"
                android:textColor="#555"
                android:textSize="@dimen/sp_14"/>


            <TextView
                android:id="@+id/tv_work_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_position_info"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@+id/iv_company_logo"
                android:text="朝阳区 1-3年"
                android:textSize="@dimen/sp_12"/>


            <TextView
                android:id="@+id/tv_company_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_work_info"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@+id/iv_company_logo"
                android:text="C轮 | 2000人以上 | 移动互联网"
                android:textSize="@dimen/sp_12"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>